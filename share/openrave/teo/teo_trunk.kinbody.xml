              <density>1</density>
            </Mass>
            </Body>

	    <Joint circular="true" name="q31" type="hinge">
            <Body>r30</Body>
            <Body>r31</Body>
            <offsetfrom>r30</offsetfrom>
            <weight>1.0</weight>
            <limitsdeg>-10 10</limitsdeg>
            <axis>0 1 0</axis>
            <maxvel>3</maxvel>
            <resolution>1</resolution>
            </Joint>

	  </KinBody>





