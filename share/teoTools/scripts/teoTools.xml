<application>
<name>teoTools App</name>

    <!-- VISION -->
    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/OpenNI2/imageFrame:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/OpenNI2/imageFrame:o</from>
        <to>/yarpview/OpenNI2/imageFrame:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/OpenNI2/depthFrame:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/OpenNI2/depthFrame:o</from>
        <to>/yarpview/OpenNI2/depthFrame:i</to>
    </connection>

    <!-- TTS and ASR -->
    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /tts/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp read ... /speechRecognition:o"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /speechRecognition/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <!-- FORCE -->
    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch0:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000 --x 0 --y 512 --dx 640 --dy 512</parameters>
        <prefix>/jr3/ch0:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch1:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000 --x 640 --y 512 --dx 640 --dy 512</parameters>
        <prefix>/jr3/ch1:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch2:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000 --x 0 --y 0 --dx 640 --dy 512</parameters>
        <prefix>/jr3/ch2:o</prefix>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpscope</name>
        <parameters>--remote /jr3/ch3:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1000 --max 1000 --x 640 --y 0 --dx 640 --dy 512</parameters>
        <prefix>/jr3/ch3:o</prefix>
        <node>localhost</node>
    </module>

    <!-- JOINT -->
    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/head/rpc:i"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/rightArm/rpc:i"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/leftArm/rpc:i"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/trunk/rpc:i"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/rightLeg/rpc:i"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/leftLeg/rpc:i"</parameters>
        <node>localhost</node>
    </module>

    <!-- CARTESIAN -->
    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/rightArm/CartesianControl/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/leftArm/CartesianControl/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/rightLeg/CartesianControl/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp rpc /teo/leftLeg/CartesianControl/rpc:s"</parameters>
        <node>localhost</node>
    </module>

    <!-- MOTORS -->
    <module>
        <name>yarpmotorgui</name>
        <parameters>--from config/yarpmotorgui.ini</parameters>
    </module>

</application>

