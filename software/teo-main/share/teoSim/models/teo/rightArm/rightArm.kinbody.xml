<!-- rightArm.kinbody.xml  -->

<!-- no joint limits -->
<KinBody name="rightArm">
    <!--Body type="dynamic" name="rightArm0"-->
    <!--Body type="static" name="rightArm0"-->
    <Body name="rightArm0">
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Body name="rightArm1">
        <Geom type="trimesh">
            <data>./rightArm1.wrl 0.001 </data>
            <render>./rightArm1.wrl 0.001 </render>
        </Geom>
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Joint name="canId15" type="hinge">
        <offsetfrom>rightArm0</offsetfrom>
        <body>rightArm0</body>
        <body>rightArm1</body>
        <axis>0 0 1</axis>
        <anchor>0 0.4967 0</anchor><!-- 0.1917+0.305 -->
        <maxvel>2</maxvel>
    </Joint>

    <Body name="rightArm2">
        <Geom type="trimesh">
            <data>./rightArm2.wrl 0.001 </data>
            <render>./rightArm2.wrl 0.001 </render>
        </Geom>
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Joint name="canId16" type="hinge">
        <offsetfrom>rightArm0</offsetfrom>
        <body>rightArm1</body>
        <body>rightArm2</body>
        <axis>1 0 0</axis>
        <anchor>0 0.4967 0.338</anchor>
        <maxvel>2</maxvel>
    </Joint>

    <Body name="rightArm3">
        <Geom type="trimesh">
            <data>./rightArm3.wrl 0.001 </data>
            <render>./rightArm3.wrl 0.001 </render>
        </Geom>
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Joint name="canId17" type="hinge">
        <offsetfrom>rightArm0</offsetfrom>
        <body>rightArm2</body>
        <body>rightArm3</body>
        <axis>0 1 0</axis>
        <anchor>0 0 0.338</anchor>
        <maxvel>2</maxvel>
    </Joint>

</KinBody>

