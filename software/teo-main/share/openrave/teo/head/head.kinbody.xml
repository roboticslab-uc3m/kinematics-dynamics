<!-- head.kinbody.xml  -->

<!-- no joint limits -->
<KinBody name="head">
    <!--Body type="dynamic" name="head0"-->
    <Body type="static" name="head0">
        <Geom type="trimesh">
            <data>./head0.wrl 0.001 </data>
            <render>./head0.wrl 0.001 </render>
        </Geom>
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Body name="head1">
        <Geom type="trimesh">
        </Geom>
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Joint name="qh1" type="hinge">
        <offsetfrom>head0</offsetfrom>
        <body>head0</body>
        <body>head1</body>
        <axis>0 0 1</axis>
        <maxveldeg>7.5</maxveldeg>
    </Joint>

    <Body name="head2">
        <Geom type="trimesh">
            <data>./head2.wrl 0.001 </data>
            <render>./head2.wrl 0.001 </render>
        </Geom>
        <mass type="sphere">
            <total>.1</total>
            <radius>1</radius>
        </mass>
    </Body>
    <Joint name="qh2" type="hinge">
        <offsetfrom>head0</offsetfrom>
        <body>head1</body>
        <body>head2</body>
        <axis>0 1 0</axis>
        <anchor>0 0 0.1917</anchor>
        <maxveldeg>7.5</maxveldeg>
    </Joint>

</KinBody>

