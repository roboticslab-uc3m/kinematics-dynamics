<Robot name="right_arm_robot">

<KinBody name="right_arm" makejoinedlinksadjacent="false">
<!--This link added for static joint-->
    <body name="right_arm/clavicle">
	<Translation>0 0 0</Translation>
      <geom type="box">
        <extents>0.001 0.001 0.001</extents>
      </geom>
    </body>

 <!--......................................................-->

    <Body name="right_arm/shoulder_pitch" type="dynamic">
	<Translation>0 0 0</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_arm/shoulder_pitch.wrl</Render>
	<collision>wrls/right_arm/shoulder_pitch.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="15" type="hinge">
      <Body>right_arm/clavicle</Body>
      <Body>right_arm/shoulder_pitch</Body>
      <offsetfrom>right_arm/clavicle</offsetfrom>
      <limitsdeg>-45 70</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>-1 0 0</axis>
<!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>
 <!--......................................................-->

    <Body name="right_arm/shoulder_roll" type="dynamic">
	<Translation>0 0 0</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_arm/shoulder_roll.wrl</Render>
	<collision>wrls/right_arm/shoulder_roll.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="16" type="hinge">
      <Body>right_arm/shoulder_pitch</Body>
      <Body>right_arm/shoulder_roll</Body>
      <offsetfrom>right_arm/shoulder_pitch</offsetfrom>
      <limitsdeg>-70 15</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>0 0 1</axis>
<!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>
 <!--......................................................-->

    <Body name="right_arm/arm" type="dynamic">
	<Translation>0 0 -0.337</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_arm/arm.wrl</Render>
	<collision>wrls/right_arm/arm.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="17" type="hinge">
      <Body>right_arm/shoulder_roll</Body>
      <Body>right_arm/arm</Body>
      <offsetfrom>right_arm/shoulder_roll</offsetfrom>
      <limitsdeg>-10 75</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>0 -1 0</axis>
<!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

 <!--......................................................-->

    <Body name="right_arm/forearm" type="dynamic">
	<Translation>0 0 -0.337</Translation>
	<RotationAxis>0 1 0 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_arm/forearm.wrl</Render>
	<collision>wrls/right_arm/forearm.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="18" type="hinge">
      <Body>right_arm/arm</Body>
      <Body>right_arm/forearm</Body>
      <offsetfrom>right_arm/arm</offsetfrom>
      <limitsdeg>-10 100</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>-1 0 0</axis>
<!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>
 <!--......................................................-->

    <Body name="right_arm/prewrist" type="dynamic">
	<Translation>0 0 -0.547</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_arm/prewrist.wrl</Render>
	<collision>wrls/right_arm/prewrist.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="19" type="hinge">
      <Body>right_arm/forearm</Body>
      <Body>right_arm/prewrist</Body>
      <offsetfrom>right_arm/forearm</offsetfrom>
      <limitsdeg>-90 90</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>0 -1 0</axis>
<!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

 <!--......................................................-->

    <Body name="right_arm/wrist" type="dynamic">
	<Translation>0 0 -0.547</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_arm/wrist.wrl</Render>
	<collision>wrls/right_arm/wrist.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="20" type="hinge">
      <Body>right_arm/prewrist</Body>
      <Body>right_arm/wrist</Body>
      <offsetfrom>right_arm/prewrist</offsetfrom>
      <limitsdeg>-10 100</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>-1 0 0</axis>
<!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

  </KinBody>
</Robot>
