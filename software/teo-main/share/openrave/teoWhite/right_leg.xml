<Robot name="right_leg_robot">
  <KinBody name="right_leg" makejoinedlinksadjacent="false">

<!--This link added for hip joint-->
    <body name="right_leg/hip_bone">
	<Translation>0 0 0</Translation>
      <geom type="box">
        <extents>0.001 0.001 0.001</extents>
      </geom>
    </body>

<!--Leg parts from here-->
    <Body name="right_leg/hip_yaw" type="dynamic">
	 <Translation>0 0 0</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_leg/hip_yaw.wrl</Render>
	<collision>wrls/right_leg/hip_yaw.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="6" type="hinge">
      <Body>right_leg/hip_bone</Body>
      <Body>right_leg/hip_yaw</Body>
      <offsetfrom>right_leg/hip_bone</offsetfrom>
      <limitsdeg>-90 90</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>0 -1 0</axis>
 <!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

 <!--......................................................-->

    <Body name="right_leg/hip_roll" type="dynamic">
	<offsetfrom>right_leg/hip_yaw</offsetfrom>
	<Translation>0 0 0</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_leg/hip_roll.wrl</Render>
	<collision>wrls/right_leg/hip_roll.wrl</collision>
      </Geom>	
    </Body>

    <Joint circular="true" name="5" type="hinge">
      <Body>right_leg/hip_yaw</Body>
      <Body>right_leg/hip_roll</Body>
      <offsetfrom>right_leg/hip_yaw</offsetfrom>
      <limitsdeg>-20 20</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>0 0 -1</axis>
 <!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

 <!--......................................................-->

    <Body name="right_leg/thigh" type="dynamic">
       <offsetfrom>right_leg/hip_roll</offsetfrom>
	<Translation>0 0.014 0</Translation>
	<RotationAxis>0 0 1 0</RotationAxis>
      <Geom type="trimesh">
        <Render>wrls/right_leg/thigh.wrl</Render>
	<collision>wrls/right_leg/thigh.wrl</collision>
      </Geom>	
    </Body>

    <Joint circular="true" name="4" type="hinge">
      <Body>right_leg/hip_roll</Body>
      <Body>right_leg/thigh</Body>
      <offsetfrom>right_leg/hip_roll</offsetfrom>
      <limitsdeg>-30 45</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>1 0 0</axis>
 <!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

 <!--......................................................-->

    <Body name="right_leg/leg" type="dynamic">
	<offsetfrom>right_leg/thigh</offsetfrom>
	<Translation>0 0 -0.33</Translation>
	<rotationaxis>0 0 1 0</rotationaxis>
      <Geom type="trimesh">
        <Render>wrls/right_leg/leg.wrl</Render>
	<collision>wrls/right_leg/leg.wrl</collision>
      </Geom>
    </Body>


    <Joint circular="true" name="3" type="hinge">
      <Body>right_leg/thigh</Body>
      <Body>right_leg/leg</Body>
      <offsetfrom>right_leg/leg</offsetfrom>
      <limitsdeg>-5 80</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>1 0 0</axis>
 <!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>


 <!--......................................................-->

   <Body name="right_leg/ankle" type="dynamic">
	<offsetfrom>right_leg/leg</offsetfrom>
	<Translation>0 +0.017 -0.3</Translation>
	<rotationaxis>0 0 1 0</rotationaxis>
      <Geom type="trimesh">
        <Render>wrls/right_leg/ankle.wrl</Render>
	<collision>wrls/right_leg/ankle.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="2" type="hinge">
      <Body>right_leg/leg</Body>
      <Body>right_leg/ankle</Body>
      <offsetfrom>right_leg/ankle</offsetfrom>
      <limitsdeg>-18 20</limitsdeg>
 <!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>1 0 0</axis>
 <!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

 <!--......................................................-->

    <Body name="right_leg/foot" type="dynamic">
	<offsetfrom>right_leg/ankle</offsetfrom>
      <Geom type="trimesh">
        <Render>wrls/right_leg/foot.wrl</Render>
	<collision>wrls/right_leg/foot.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="1" type="hinge">
      <Body>right_leg/ankle</Body>
      <Body>right_leg/foot</Body>
      <offsetfrom>right_leg/foot</offsetfrom>
      <limitsdeg>-25 25</limitsdeg>
<!--   Openrave: X(frontal) Y(axial) Z(sagital) --> 
      <axis>0 0 1</axis>
 <!--   maxvel - dof floats
        maxveldeg - dof floats   --> 
        <maxveldeg>7.5</maxveldeg>
      <resolution>1</resolution>
    </Joint>

  </KinBody>
</Robot>
